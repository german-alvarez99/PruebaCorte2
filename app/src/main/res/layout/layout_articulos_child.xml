<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTituloArticuloListar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="titulo"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtPClaveArticuloListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabras Claves:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtFechaArticuloListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doi:"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/txtDoiArticuloListar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha:"
        android:textSize="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btnPdfActiculos"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:text="PDF"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHtmlArticulos"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@color/colorAccent"
                android:text="HTML"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_below="@+id/a"
        android:background="#FFCDCDCD"/>

</LinearLayout>